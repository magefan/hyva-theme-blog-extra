                                <div class="block-date text-xs text-gray-400">
                                    <span class="post-date"><?= $block->escapeHtml($_post->getPublishDate()) ?></span>
                                </div>
                            <?php } ?>
                            <?php /*
                            <div class="post-description hidden"></div>
                            <div class="read-more hidden"></div>
                            */ ?>
